<h3 class="ui center">Login</h3>

<form class='ui large form' {{action (perform submit model) on='submit'}}>
  <div class="ui stacked segment">
    {{#if errors.errors}}
      <div class='ui negative message'>
        {{#each errors.errors as |errorMessage|}}
          {{errorMessage}}
        {{/each}}
      </div>
    {{/if}}
    <div class="ui inverted dimmer {{if submit.isRunning 'active'}}">
      <div class="ui text loader">Loading</div>
    </div>
    <div class='field'>
      {{input type='email'
          id='identification'
          placeholder='Email'
          value=model.identification}}
      </div>
    <div class='field'>
      {{input type='password'
          id='password'
          placeholder='Password'
          value=model.password}}
    </div>
    <button class='ui fluid large submit button' type='submit'>Login</button>
  </div>
</form>
